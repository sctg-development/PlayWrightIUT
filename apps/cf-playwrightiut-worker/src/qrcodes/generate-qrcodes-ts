#!/bin/bash

# Script to generate qrcodes.ts with individual exports from SVG files
# Usage: ./generate-qrcodes-ts

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
OUTPUT_FILE="$SCRIPT_DIR/qrcodes.ts"

echo "Generating qrcodes.ts from SVG files..."

# Start the output file
cat > "$OUTPUT_FILE" << 'EOF'
/**
 * QR code SVG exports generated from SVG files
 * Generated by generate-qrcodes-ts script
 */
EOF

# Process each SVG file
for svg_file in "$SCRIPT_DIR"/*.svg; do
    if [[ -f "$svg_file" ]]; then
        # Extract group name from filename (remove .svg extension)
        group_name=$(basename "$svg_file" .svg)

        echo "Processing $group_name..."

        # Read SVG content and escape backticks
        svg_content=$(cat "$svg_file" | sed 's/`/\\`/g')

        # Add export for this group
        cat >> "$OUTPUT_FILE" << EOF

// ${group_name} QR Code SVG
export const QRCode_${group_name} = \`${svg_content}\`;
EOF
    fi
done

echo "Generated qrcodes.ts successfully! Output file: $OUTPUT_FILE"